@model WebApp.Models.Session

@{
    ViewData["Title"] = "Edit";
}

<h2 id="page">Edit</h2>

<h4 id="editPage">Session</h4">
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SessionID" />
            <div class="form-group">
                <label asp-for="ArtistID" class="control-label"></label>
                <select asp-for="ArtistID" class="form-control" asp-items="ViewBag.ArtistID"></select>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeID" class="control-label"></label>
                <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="SessionLength" class="control-label"></label>
                <input asp-for="SessionLength" class="form-control" />
                <span asp-validation-for="SessionLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SessionDate" class="control-label"></label>
                <input asp-for="SessionDate" class="form-control" />
                <span asp-validation-for="SessionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-default">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
