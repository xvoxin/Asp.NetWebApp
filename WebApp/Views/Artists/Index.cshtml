@model IEnumerable<WebApp.Models.Artist>

@{
    ViewData["Title"] = "Artists";
}

<h2>Artists</h2>

<p>
    <a asp-action="Create" class="btn btn-info btn-sm">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find: <input type="text" name="search" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-success btn-sm" />
            <a asp-action="Index" class="btn btn-success btn-sm">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MembersCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegistrationDate)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembersCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary btn-xs" asp-route-id="@item.ArtistID">Edit</a>
                <a asp-action="Details" class="btn btn-info btn-xs" asp-route-id="@item.ArtistID">Details</a>
                <a asp-action="Delete" class="btn btn-danger btn-xs" asp-route-id="@item.ArtistID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
